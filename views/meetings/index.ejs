<%- include('../partials/header') %>
  <body>
    <nav class="navbar navbar-Dark bg-black">
      <div class="container-fluid">
        <a class="navbar-brand text-white border-white" href="#">Meetser</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"> </span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link active text-white" aria-current="page" href="/"
              >Home</a
            >
            <a class="nav-link text-white" href="/meetings/">ALL Meetings</a>
            <a class="nav-link text-white" href="/meetings/new">ADD Meeting</a>
            <a
              id="login-button"
              ms-hide-element="true"
              href="/google/"
              class="button logout login w-button"
              >Login</a
            >
          </div>
        </div>
      </div>
    </nav>
    <div class = all-meeting><table class="table table-striped table-dark">
    <thead>
      <tr>
        <th></th>
        <th>Contact</th>
        <th>Event</th>
        <th>Date-Time</th>
        <th>Location</th>
        <th>Notes</th>
      </tr>
    </thead>
    <tbody>
      <% meetings.forEach(function(m) { %>
      <tr>
        <td><form
          action="/meetings/<%= m.id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button id="removeBtn" type="submit">DELETE</button>
        </form></td>
        <td><%= m.contact %></td>
        <td><%= m.event %></td>
        <td><%= m.date %></td>
        <td><%= m.location %></td>
        <td><a href="/notes/<%= m._id %>">Notes</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table></div>
    <div class="bgi"></div>
    </div>
  

  

